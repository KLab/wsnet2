generator client {
  provider      = "prisma-client-js"
}

generator nexusPrisma {
  provider      = "nexus-prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model app {
  id   String  @id @db.VarChar(32)
  name String?
  key  String?
}

model game_server {
  id          Int     @id @default(autoincrement()) @db.UnsignedInt
  hostname    String  @unique(map: "idx_hostname")
  public_name String
  grpc_port   Int
  ws_port     Int
  status      Int     @db.TinyInt
  heartbeat   BigInt?
}

model hub {
  id       BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  host_id  Int      @db.UnsignedInt
  room_id  String   @db.VarChar(32)
  watchers Int      @db.UnsignedInt
  created  DateTime @db.DateTime(0)

  @@unique([room_id, host_id], map: "idx_room")
}

model hub_server {
  id          Int     @id @default(autoincrement()) @db.UnsignedInt
  hostname    String  @unique(map: "idx_hostname")
  public_name String
  grpc_port   Int
  ws_port     Int
  status      Int     @db.TinyInt
  heartbeat   BigInt?
}

model room {
  id           String    @id @db.VarChar(32)
  app_id       String    @db.VarChar(32)
  host_id      Int       @db.UnsignedInt
  visible      Int       @db.TinyInt
  joinable     Int       @db.TinyInt
  watchable    Int       @db.TinyInt
  number       Int?      @unique(map: "idx_number")
  search_group Int       @db.UnsignedInt
  max_players  Int       @db.UnsignedInt
  players      Int       @db.UnsignedInt
  watchers     Int       @db.UnsignedInt
  props        Bytes?    @db.Blob
  created      DateTime? @db.DateTime(0)

  @@index([app_id, search_group], map: "idx_search_group")
}

model room_history {
  id            BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  app_id        String    @db.VarChar(32)
  host_id       Int       @db.UnsignedInt
  room_id       String    @db.VarChar(32)
  number        Int?
  search_group  Int       @db.UnsignedInt
  max_players   Int       @db.UnsignedInt
  public_props  Bytes?    @db.Blob
  private_props Bytes?    @db.Blob
  player_logs   Json?
  created       DateTime? @db.DateTime(0)
  closed        DateTime? @db.DateTime(0)

  @@index([created], map: "created")
  @@index([room_id], map: "room_id")
}
